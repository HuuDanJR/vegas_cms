<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark"><%= t('role') %></h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active"><%= t('role') %></li>
        </ol>
      </div><!-- /.col -->

    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</section>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <div class=row>
            <div class="col-md-6">
              <%= form_with(url: "/roles", method: "get", local: true) do |f| %>
                <%= f.hidden_field :page, :value => 1 %>
                <%= f.text_field(:search, value: @search_query, placeholder: "Tìm kiếm") %>
                <%= f.submit("Tìm kiếm") %>
              <% end %>
            </div>
            <div class="col-md-6">
              <%= link_to 'Thêm mới', new_role_path(), class: "btn btn-primary btn-smr float-sm-right" %>
            </div>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive">
          <table class="table table-striped projects">
            <thead>
            <tr>
              <th>TT</th>
              <th><%= t('role_name') %></th>
              <th><%= t('role_description') %></th>
              <th><%= t('role_action') %></th>
              <th><%= t('role_resource') %></th>
              <th class="text-center">Tùy chọn</th>
            </tr>
            </thead>

            <tbody>
            <% index = 0 %>
            <% @roles.each do |role| %>
              <tr>
                <% index = index + 1 %>
                <td><%= index %></td>
                <td><%= role.name %></td>
                <td><%= role.description %></td>
                <td><%= role.action %></td>
                <td><%= role.resource %></td>
                <td class="project-actions text-center">
                  <%= link_to 'Hiển thị', role %> | <%= link_to 'Chỉnh sửa', edit_role_path(role) %> | <%= link_to 'Xóa', role, method: :delete, data: {confirm: 'Bạn có muốn xóa?'} %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <div class="p-2 digg_pagination">
            <%= will_paginate @roles %>
          </div>
          <!--          <div class=row>-->
          <!--            <div class="col-md-12">-->
          <!--              <a class="btn btn-primary btn-smr float-sm-right" href="/roles/export" target="_blank">Export</a>-->
          <!--            </div>-->
          <!--          </div>-->
        </div>
      </div>
    </div>
  </div>
</section>
