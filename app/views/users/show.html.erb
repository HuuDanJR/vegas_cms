<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark"><%= t('user') %></h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active"><%= t('user') %></li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</section>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Thông tin cơ bản</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <div class="form-row">
              <div class="col-md-6 form-group">
                <p>
                  <strong><%= t('user_email') %>:</strong>
                  <%= @user.email %>
                </p>
              </div>
              <div class="col-md-6 form-group">
                <p>
                  <strong><%= t('user_name') %>:</strong>
                  <%= @user.name %>
                </p>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-6 form-group">
                <p>
                  <strong><%= t('user_birthday') %>:</strong>
                  <% if @user.birthday %>
                    <%= @user.birthday.strftime("%d-%m-%Y") %>
                  <% end %>
                </p>
              </div>
              <div class="col-md-6 form-group">
                <p>
                  <strong><%= t('user_created_at') %>:</strong>
                  <%= @user.created_at.strftime("%d-%m-%Y") %>
                </p>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-6 form-group list-hide-end">
                <p>
                  <strong><%= t('group') %>:</strong>
                  <% @user.groups.each do |item| %>
                    <%= item.name %> <span>-</span>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="card card-secondary">
          <div class="card-header">
            <h3 class="card-title">Thông tin quyền</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <div class="form-row">
              <div class="col-md-12 form-group">
                <table id="user_role" class="table table-striped projects">
                  <thead>
                  <tr>
                    <th>TT</th>
                    <th><%= t('role_name') %></th>
                    <th><%= t('role_description') %></th>
                  </tr>
                  </thead>
                  <tbody>
                  <% index = 0 %>
                  <% @user.roles.each do |item| %>
                    <tr>
                      <% index = index + 1 %>
                      <td><%= ++index %></td>
                      <td><%= item.name %></td>
                      <td><%= item.description %></td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= link_to 'Trở về', users_path, class: "btn btn-secondary" %>
        <%= link_to 'Cập nhật', edit_user_path(@user), class: "btn btn-success float-right" %>
      </div>
    </div>
  </div>
</section>

