<div class="row" style="margin: unset">
  <div class="col-md-4 d-flex container-login-left" style="padding-left: 0px; padding-right: 0px">
    <img src="<%= image_path('logo.png') %>" alt="User Avatar" class="logo-login mr-3 img-circle">
  </div>
  <div class="col-md-8" style="padding-left: 0px; padding-right: 0px">
    <div class="back-home">
      <a href="/" class="btn-backhome">Trang chủ</a>
    </div>
    <div class="register-page">
      <div class="register-box">
        <div class="card">
          <div class="card-body register-card-body">
            <p class="login-box-msg title-forn-login-register">Cập nhật tài khoản</p>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>
                
                <div class="input-group mb-3">
                  <%= f.email_field :email, autofocus: true,  placeholder: "Email", class: 'form-control', readonly: true %>
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-envelope"></span>
                    </div>
                  </div>
                </div>

                <div class="input-group mb-3">
                  <%= f.text_field :name, autofocus: true,  placeholder: "Họ tên", class: 'form-control' %>
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-user-alt"></span>
                    </div>
                  </div>
                </div>

                <div class="input-group mb-3">
                  <%= f.date_field :birthday, autofocus: true, autocomplete: "new-password", placeholder: "Ngày sinh", class: 'form-control', style: 'border-right: 1px solid #ced4da !important' %>
                </div>

   
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Đang chờ xác nhận email: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="input-group mb-3">
                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Mật khẩu mới", class: 'form-control' %>
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-lock"></span>
                    </div>
                  </div>
                </div>

                <div class="input-group mb-3">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Xác nhận mật khẩu", class: 'form-control' %>
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-lock"></span>
                    </div>
                  </div>
                </div>

                <div class="input-group mb-3">
                  <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Mật khẩu hiện tại", class: 'form-control' %>
                  <div class="input-group-append">
                    <div class="input-group-text">
                      <span class="fas fa-lock"></span>
                    </div>
                  </div>
                </div>
                <div class="input-group">
                      <%= f.submit "Cập nhật", class: 'btn button-login btn-block' %>
                </div>
              <% end %>
              <%= link_to "Trở về", :back %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
