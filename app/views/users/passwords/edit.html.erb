<div class="row" style="margin: unset">
  <div class="col-md-4 d-flex container-login-left" style="padding-left: 0px; padding-right: 0px">
    <img src="<%= image_path('logo.png') %>" alt="User Avatar" class="logo-login mr-3 img-circle">
  </div>
  <div class="col-md-8" style="padding-left: 0px; padding-right: 0px">
    <div class="back-home">
      <a href="/" class="btn-backhome">Trang chủ</a>
    </div>
    <div class="register-page">
      <div class="register-box">
        <div class="card">
          <div class="card-body register-card-body">
            <p class="login-box-msg title-forn-login-register">Thay đổi mật khẩu</p>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
              <%= render "users/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="input-group mb-3">
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Mật khẩu mới", class: 'form-control' %>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                  </div>
                </div>
              </div>

              <div class="input-group mb-3">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Xác nhận mật khẩu", class: 'form-control' %>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                  </div>
                </div>
              </div>

              <div class="input-group mb-3">
                <%= f.submit "Thay đổi mật khẩu", class: 'btn button-register btn-block' %>
              </div>
            <% end %>
            <hr>
            <%= render "users/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
