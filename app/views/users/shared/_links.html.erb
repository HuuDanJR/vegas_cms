<div class="input-group">  
  <%- if controller_name != 'sessions' %>
      <%= link_to "Đăng nhập", new_session_path(resource_name) %><br/>
    <% end %>
</div>

<div class="input-group">  
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Đăng ký", new_registration_path(resource_name) %><br/>
  <% end %>
</div>

<div class="input-group">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Quên mật khẩu?", new_password_path(resource_name) %><br/>
  <% end %>
</div>

<div class="input-group">  
   <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Không nhận được hướng dẫn xác nhận?", new_confirmation_path(resource_name) %><br/>
  <% end %>
</div>

<div class="input-group">  
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Không nhận được hướng dẫn mở khóa?", new_unlock_path(resource_name) %><br/>
  <% end %>
</div>