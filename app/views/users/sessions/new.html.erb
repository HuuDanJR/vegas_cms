<div class="row" style="margin: unset">
  <div class="col-md-4 d-flex container-login-left" style="padding-left: 0px; padding-right: 0px">
    <img src="<%= image_path('logo.png') %>" alt="User Avatar" class="logo-login mr-3 img-circle">
  </div>
  <div class="col-md-8" style="padding-left: 0px; padding-right: 0px">
    <div class="back-home">
      <a href="/" class="btn-backhome">Trang chủ</a>
    </div>
    <div class="login-page">
      <div class="login-box">
        <div class="login-logo">
          <%# <a href="/"><b>VCMS</b></a> %>
        </div>
        <!-- /.login-logo -->
        <div class="card">
          <div class="card-body login-card-body">
            <p class="login-box-msg title-forn-login-register">Đăng nhập</p>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="input-group mb-3">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form-control' %>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                  </div>
                </div>
              </div>
              <div class="input-group mb-3">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Mật khẩu", class: 'form-control' %>
                <div class="input-group-append">
                  <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                  </div>
                </div>
              </div>
              <div class="input-group">
                  <% if devise_mapping.rememberable? %>
                    <div class="icheck-primary">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me, "Ghi nhớ đăng nhập" %>
                    </div>
                  <% end %>
              </div>
              <div class="input-group">
                  <%= f.submit "Đăng nhập", class: 'btn button-login btn-block' %>
              </div>
            <% end %>
            <div class="input-group d-flex" style="margin-top: 5px">
              <p class="mb-1" style="flex: 1">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Quên mật khẩu?", new_password_path(resource_name) %>
                <% end %>
              </p>

              <p class="mb-0 text-right">
                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "Đăng ký", new_registration_path(resource_name) %>
                <% end %>
              </p>
            </div>

            <div class="diver-text"><span>hoặc</span></div>
            <p class="mb-2">
              <div class="input-group">
                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "Đăng nhập với facebook", user_facebook_omniauth_authorize_path , class: "btn button-login-facebook btn-block" %>
                <% end %>
              </div>
            </p>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>