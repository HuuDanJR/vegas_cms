<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Roulette</h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="">Home</a></li>
          <li class="breadcrumb-item active">Roulettes</li>
        </ol>
      </div><!-- /.col -->

    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</section>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Information</h3>
          </div>
          <div class="card-body">
            <p>
              <strong>Name:</strong>
              <%= @roulette.name %>
            </p>

            <p>
              <strong>Description:</strong>
              <%= @roulette.description %>
            </p>

            <p>
              <strong>Streaming url:</strong>
              <%= @roulette.streaming_url %>
            </p>

            <p>
              <strong>Publish:</strong>
              <%= @roulette.publish %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= link_to 'Edit', edit_roulette_path(@roulette), class: "btn btn-success float-right" %>
        <%= link_to 'Back', roulettes_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</section>
