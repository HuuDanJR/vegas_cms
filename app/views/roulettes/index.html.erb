<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Roulettes</h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="">Home</a></li>
          <li class="breadcrumb-item active">Roulettes</li>
        </ol>
      </div><!-- /.col -->

    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</section>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <div class=row>
            <div class="col-md-6">
              <%= form_with(url: "/roulettes", method: "get", local: true) do |f| %>
                <%= f.hidden_field :page, :value => 1 %>
                <%= f.text_field(:search, value: @search_query, placeholder: "Search name") %>
                <%= f.submit("Search") %>
              <% end %>
            </div>
            <div class="col-md-6">
              <%= link_to 'New', new_roulette_path, class: "btn btn-primary btn-smr float-sm-right" %>
            </div>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive">
          <table id="place_list" class="table table-striped projects">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Streaming url</th>
                <th>Publish</th>
                <th class="text-center">Action</th>
              </tr>
            </thead>

            <tbody>
              <% @roulettes.each do |roulette| %>
                <tr>
                  <td><%= roulette.name %></td>
                  <td><%= roulette.description %></td>
                  <td><%= roulette.streaming_url %></td>
                  <td><%= roulette.publish %></td>
                  <td class="project-actions text-center">
                  <%= link_to 'Show', roulette %> 
                    | <%= link_to 'Edit', edit_roulette_path(roulette) %> 
                    | <%= link_to 'Destroy', roulette, method: :delete, data: {confirm: 'Are you sure?'} %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="p-2 digg_pagination">
            <%= will_paginate @roulettes %>
          </div>
          <div class=row>
            <div class="col-md-12">
              <a class="btn btn-primary btn-smr float-sm-right" href="/roulettes/export" target="_blank">Export</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
